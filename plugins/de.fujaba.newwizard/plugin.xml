<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="de.fujaba.newwizard.diagraminformation" name="DiagramInformation" schema="schema/de.fujaba.newwizard.diagraminformation.exsd"/>
   <extension-point id="de.fujaba.newwizard.modelinitializer" name="de.fujaba.newwizard.modelinitializer" schema="schema/de.fujaba.newwizard.modelinitializer.exsd"/>
  <extension point="org.eclipse.ui.newWizards" >
    <category name="Fujaba" id="de.fujaba" />
    <category name="Diagrams" id="de.fujaba.diagrams"
         parentCategory="de.fujaba"/>

    <wizard
           category="de.fujaba"
           class="de.fujaba.newwizard.model.FujabaModelNewWizard"
           icon="icons/newfujabamodel.gif"
           id="de.fujaba.muml.modelwizard.FujabaNewModelWizardID"
           name="Fujaba Model">
         <description>
            Creates a new Fujaba model file
         </description>
    </wizard>
    
  </extension>
  <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           locationURI="popup:org.eclipse.ui.popup.any?after=additions">
        <menu
              icon="icons/newfujabamodel.gif"
              id="de.fujaba"
              label="Fujaba">
           <command
                 commandId="de.fujaba.core.ui.command.newmodel"
                 icon="icons/newfujabamodel.gif"
                 id="de.fujaba.core.ui.command.newmodel"
                 label="Create new Fujaba Model"
                 style="push">
              <visibleWhen
                    checkEnabled="false">
                 <iterate
                       ifEmpty="true"
                       operator="or">
                 </iterate>
              </visibleWhen>
           </command>
           <separator
                 name="diagrams"
                 visible="false">
           </separator>
           <separator
                 name="additions"
                 visible="false">
           </separator>
           <separator
                 name="utilities"
                 visible="false">
           </separator>
        </menu>
     </menuContribution>
  </extension>
  <extension
        point="org.eclipse.core.expressions.definitions">
     <definition
           id="de.fujaba.expression.fujabafile">
	    <iterate
           ifEmpty="false"
           operator="and">
	       <adapt type="org.eclipse.core.resources.IResource">
	          <test property="org.eclipse.core.resources.name" 
	                value="*.fujaba"/>
	       </adapt>
	    </iterate>
     </definition>
  </extension>
  <extension
        point="org.eclipse.ui.commands">
     <category
           id="de.fujaba"
           name="Fujaba">
     </category>
     <command
           categoryId="de.fujaba"
           defaultHandler="de.fujaba.newwizard.ui.commands.CreateModelFileCommand"
           description="Create new Fujaba Model"
           id="de.fujaba.core.ui.command.newmodel"
           name="Create new Fujaba Model">
     </command>
  </extension>

</plugin>
